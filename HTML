    <tr>
      <th>Tag</th>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="main">&lt;ink rel="stylesheet" href="./styles.css" type="text/css"&gt</td>
      <td>Link to Stylesheet</td>
      <td>This links the HTML document to the CSS stylesheet.</td>
    </tr>
    <tr>
      <td>'p'</td>
      <td>Element Selector</td>
      <td></td>
    </tr>
    <tr>
      <td>'#p'</td>
      <td>id Selector</td>
      <td></td>
    </tr>
    <tr>
      <td>'.p'</td>
      <td>class Selector</td>
      <td></td>
    </tr>
    <tr>
      <td>'h1'</td>
      <td>group Selector</td>
      <td></td>
    </tr>
    <tr>
      <td>'p.center'</td>
      <td>p element with class selector</td>
      <td></td>
    </tr>
  </tbody>
